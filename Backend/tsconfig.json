{
  "compilerOptions": {
    /* ===== Output settings ===== */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,

    /* ===== Node + Express environment ===== */
    "lib": ["ES2020"],
    "types": ["node"],

    /* ===== Type Safety ===== */
    "strict": true,
    "skipLibCheck": true,

    /* ===== Module resolution ===== */
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
